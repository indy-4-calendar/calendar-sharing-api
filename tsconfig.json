{
  "compilerOptions": {
    "target": "ES2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": false,
    "skipLibCheck": true,
    "useUnknownInCatchVariables": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./src",
    "strictNullChecks": true,
    "paths": {
      "@/*": ["*"],
      "@tests/*": ["../jest/*"]
    }
  },
  "include": [
    "src/**/*",
    "scripts/**/*",
    "jest/__mocks__/**/*"
  ],
  "exclude": ["**/__mocks__/*"],
  "ts-node": {
    "files": true
  }
}
